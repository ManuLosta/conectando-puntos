enum Role {
  SUPER_ADMIN
  DISTRIBUTOR_ADMIN
  SALESPERSON
  FINAL_CLIENT
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  phone     String?  @unique
  name      String
  role      Role
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  salesperson       Salesperson?
  distributorAdmin  DistributorAdmin?
  finalClient       FinalClient?
  superAdmin        SuperAdmin?

  @@map("users")
}

model SuperAdmin {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  permissions String[] // JSON array of permissions

  @@map("super_admins")
}

model DistributorAdmin {
  id           String @id @default(cuid())
  userId       String @unique
  user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  distributorId String

  // Relationships
  distributor Distributor @relation(fields: [distributorId], references: [id])

  @@map("distributor_admins")
}

model Salesperson {
  id           String @id @default(cuid())
  userId       String @unique
  user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  distributorId String
  territory    String?

  // Relationships
  distributor Distributor @relation(fields: [distributorId], references: [id])
  orders      Order[]

  @@map("salespeople")
}

model FinalClient {
  id         String  @id @default(cuid())
  userId     String  @unique
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  address    String?
  city       String?
  postalCode String?

  // Relationships
  orders            Order[]
  distributorClients ClientDistributor[]

  @@map("final_clients")
}